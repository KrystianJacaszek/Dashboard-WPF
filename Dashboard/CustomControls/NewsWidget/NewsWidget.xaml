<UserControl
    x:Class="Dashboard.CustomControls.NewsWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dashboard.CustomControls.NewsWidget"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <SvgImageSource x:Key="NewsIcon" UriSource="Assets/newspaper.svg"/>
    </UserControl.Resources>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource NewsIcon}"
               Height="45"
               Width="50"
               Margin="10"
               VerticalAlignment="Top"/>
            <StackPanel Margin="10,0,10,0">
                <TextBlock Text="What has happened today?"
                           Margin="10,10,10,0"
                           FontWeight="Medium"
                           FontSize="18"/>

                <TextBlock Text="Read below..."
                           FontSize="16"
                           HorizontalAlignment="Center"
                           FontWeight="Medium"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="10,5,10,0">
            <StackPanel>
                <Image CacheMode="BitmapCache"
                       x:Name="Image"
                       VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel>
                <TextBlock x:Name="Source"
                           FontSize="16"
                           Margin="0,5,0,0"
                           FontWeight="Medium"/>

                <TextBlock Text="Title:"
                           FontWeight="Medium"/>

                <TextBlock x:Name="Title"
                           TextWrapping="Wrap"/>

                <TextBlock Text="Date:"
                           FontWeight="Medium"/>

                <TextBlock x:Name="Date"/>

                <TextBlock x:Name="Counter"/>

                <TextBlock x:Name="NewsText"
                           TextWrapping="Wrap"
                           Height="80"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="Back"
                    Content="&lt;"
                    Click="Back_Click"
                    VerticalAlignment="Bottom"/>

            <Button x:Name="BackNews"
                    Content="Previous Source"
                    Click="Back_News"/>

            <Button x:Name="NextNews"
                    Content="Next Source"
                    Click="Next_News"/>

            <Button x:Name="LoadNews"
                    Content="Load News"
                    Click="Load_News"/>

            <Button x:Name="Next"
                    Content="&gt;"
                    Click="Next_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
